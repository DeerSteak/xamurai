<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="Xamurai.CarView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Xamurai"
			 xmlns:tk="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
             x:Name="_carView"
			 x:DataType="local:Car"
             BackgroundColor="White">
	<ContentView.Content>
		<Frame Margin="5,15,5,5"
			       BorderColor="LightGray"
			       CornerRadius="5"
			       HasShadow="False">
			<tk:Expander IsExpanded="{Binding IsVisible}" Command="{Binding ToggleCollapseCommand, Source={x:Reference _carView}}">
				<tk:Expander.Header>
					<local:CarCircleView Margin="7,0,0,0"				                     
				                     HeightRequest="30"
				                     HorizontalOptions="Start"
				                     VerticalOptions="Start"
				                     WidthRequest="30" />
				</tk:Expander.Header>
				<tk:Expander.Content>
					<StackLayout>
						<Grid x:Name="NotesGrid">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" x:Name="NotesCell" />
							</Grid.RowDefinitions>
							<Label HorizontalOptions="End"
								   Text="{Binding Notes}"
								   TextColor="Gray" />
							<Label Grid.Row="1" Text="{Binding Description}" />
						</Grid>
					</StackLayout>
				</tk:Expander.Content>
			</tk:Expander>
		</Frame>
